TASK#01
#include <iostream>
using namespace std;

int main() {
    const int MAX_SIZE = 8;
    int arr[MAX_SIZE] = {10, 20, 30, 40, 50, 60, 70, 80};
    int size = MAX_SIZE;

    cout << "Original array:\n";
    for (int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    // Delete from start
    for (int i = 0; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    size--;  // One element removed from start

    // Delete from end (just reduce size)
    size--;

    cout << "\nArray after deleting start and end elements:\n";
    for (int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
}

TASK#02
#include <iostream>
using namespace std;

int main() {
    const int SIZE = 8;
    int arr[SIZE] = {10, 20, 30, 40, 50, 60, 70, 80};

    cout << "Original array:\n";
    for (int i = 0; i < SIZE; i++)
        cout << arr[i] << " ";
    cout << endl;

    int index, newValue;

    cout << "\nEnter the index (0 to 7) to update: ";
    cin >> index;

    if (index < 0 || index >= SIZE) {
        cout << "Invalid index!" << endl;
        return 1;
    }

    cout << "Enter the new value: ";
    cin >> newValue;

    arr[index] = newValue;

    cout << "\nUpdated array:\n";
    for (int i = 0; i < SIZE; i++)
        cout << arr[i] << " ";
    cout << endl;

    return 0;
}
