TASK#01

#include <iostream>
using namespace std;

// Function to swap two integers using pointers
void swap(int* a, int* b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    int x = 10, y = 20;

    cout << "Before swap:\n";
    cout << "x = " << x << ", y = " << y << endl;

    // Call the swap function
    swap(&x, &y);

    cout << "\nAfter swap:\n";
    cout << "x = " << x << ", y = " << y << endl;

    return 0;
}
